<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/replayBackground"
    android:paddingBottom="4dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video Replay"
        android:layout_margin="8dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/lightText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBackground">

        <VideoView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/video" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/lightText"
            android:padding="4dp"
            android:layout_weight="0.5"
            android:text="Ref Owens gives ball boy a yellow card\n\n44:10\n\nReferee Nigel Owens gives the ball boy a yellow card after being hit by a ball."/>

    </LinearLayout>

</LinearLayout>